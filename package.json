{
  "name": "oncolife",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "server",
    "patient-app",
    "clinician-app"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:patient": "npm run dev --workspace=patient-app",
    "dev:clinician": "npm run dev --workspace=clinician-app",
    "db:generate": "npm run generate --workspace=@oncolife/db",
    "db:migrate": "npm run migrate --workspace=@oncolife/db",
    "db:seed": "npm run seed --workspace=@oncolife/db"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "npx tsx packages/db/src/seed.ts"
  }
}

